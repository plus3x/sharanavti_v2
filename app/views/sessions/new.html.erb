<div id="login_form">
  <% if flash[:notice] %>
    <p id="notice"><%= flash[:notice] %></p>
  <% end %>
  <%= form_tag do %>
    <fieldset>
      <legend>Пожалуйтста войдите</legend>
      <div>
        <%= label_tag 'Логин' %><br/>
        <%= email_field_tag :email, params[:email] %>
      </div> 
      <div>
        <%= label_tag 'Пароль' %><br/>
        <%= password_field_tag :password, params[:password] %>
      </div>
      <div>
        <%= submit_tag 'Войти' %> 
      </div>
    </fieldset> 
  <% end %>
</div>
